{
  "name": "@enovaui/design-tokens",
  "version": "0.8.2",
  "description": "Monorepo for Design Tokens for LGE",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/enovaui/design-tokens.git"
  },
  "main": "index.js",
  "license": "Apache-2.0",
  "keywords": [
    "design",
    "tokens"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "sync:figma": "node scripts/figma-sync.js",
    "transform:tokens": "node scripts/token-transformer.js",
    "create:pr": "node scripts/pr-generator.js",
    "sync:all": "npm run sync:figma && npm run transform:tokens && npm run create:pr",
    "clean": "rm -rf packages/*/dist/*",
    "version": "npx changeset version && node scripts/sync-version.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "fs-extra": "^11.2.0",
    "node-fetch": "^3.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "dotenv": "^17.1.0"
  }
}
